@page "/"
@using AstroPanda.Blazor.Toolkit
@using AstroPanda.Blazor.Toolkit.Services

<PageTitle>Home</PageTitle>


<MudText Typo="Typo.h3">@(_mobile ? "This is a mobile device" : "This is not a mobile device")</MudText>
<MudButton OnClick="CheckMobile">Check If Mobile</MudButton>

@code{
    [Inject]
    public IDeviceService _deviceService { get; set; }

    private bool _mobile { get; set; } = false;

    private async Task CheckMobile()
    {
        _mobile = await _deviceService.IsMobile();
    }
}
